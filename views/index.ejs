 <%-include('partials/header')%>

    <main id="main">
        <div class="container">
            <div class="justify" style="margin: 15px;padding: 5px;background-color: #f8f9fa!important;color: #000 !important;font-size: 20px;">
                <a href="/add_user">
                    <span class="text-gradient">New User</span>
                </a>
                <a href="/secret">
                    <span class="text-gradient">Secret</span>
                </a>
                <a href="/login">
                    <span class="text-gradient">Login</span>
                </a>
                <a href="/logout">
                    <span class="text-gradient">Logout</span>
                </a>
            </div>

            
            <form action="/" method="POST">
                <table id="userData" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0;i<users.length;i++){%>
                        <tr>
                            <td><%=i+1%></td>
                            <td><%=users[i].firstName%></td>
                            <td><%=users[i].lastName%></td>
                            <td><%=users[i].email%></td>
                            <td><%=users[i].mobile%></td>
                            <td><%=users[i].address%></td>
                            <td>
                                <a href="/update_user?id=<%=users[i]._id%>" class="update">
                                    <span>Edit</span>
                                </a>
                                
                            </td>
                        </tr>
                        <%}%>
                    </tbody>
                </table>
            </form>
        </div>
    </main>

<%-include('partials/footer')%> 
