<%-include('partials/header')%>

<main id="main">
    <div class="container">
        <div class="justify" style="margin: 15px;padding: 5px;background-color: #f8f9fa!important;color: #000 !important;font-size: 20px;">
            <a href="/">
            <span class="text-gradient">All users</span>
            </a>
            <a href="/secret">
                <span class="text-gradient">Secret</span>
            </a>
            <a href="/login">
                <span class="text-gradient">Login</span>
            </a>
            <a href="/logout">
                <span class="text-gradient">Logout</span>
            </a>
        </div>
        <div><h2 style="text-align: center">Login User</h2></div>
        <form action="/api/user/login" method="POST" id="login_user" class="form-horizontal">
            <div id="user_login">
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" name="email" value="" class="form-control" placeholder="example@gmail.com">
                    </div>
                </div>
               
                <div class="form-group row">
                    <label for="password" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                            <input type="text" name="password" value="" class="form-control" placeholder="Password">
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
            
        </form>
    </div>
</main>

<%-include('partials/footer')%>